
EXEC SP__HELP /*NOMBRE DE LA TABLA*/;          TE MUESTRA CADA CAMPO DE LA TABLA Y SUS RESPECTIVOS TIPOS DE DATOS
INSERT INTO /*NOMBRE DE LA TABLA*/ VALUES( CAMPO, CAMPO, );   AÑADIMOS UNA FILA A LA BASE DE DATOS
SELECT * FROM /*NOMBRE DE LA TABLA*/;          TE MUESTRA LAS FILAS CREADAS EN ESA TABLAS
SELECT NOMBRE,"OTROAPARTADO" DE LA COLUMNA FROM NOMBRE DE LA TABLA   TE MUESTRA LAS FILAS UNICAMENTE CON EL NOMBRE DE LA COLUMNA , POR EJEMPLO COLUMNA NOMBRE , SOLAMENTE TE ENSEÑA LOS NOMBRES
EXEC SP_RENAME 'NOMBRE' , 'NOMBRE';       CAMBIAR DE NOMBRE BASE DE DATOS

SELECT * FROM NOMBRE DE LA TABLA WHERE Nombre de la COLUMNA = 'VALOR A BUSCAR TEXTO O NUMERO sin comillas' ;   DE TODOS LOS VALORES DE LA TABLA TE INDICA EL QUE ESTA RELACIONADO CON TU BUSQUEDA
SELECT NOMBRE DE LA COLUMNA FROM NOMBRER DE LA TABLA  WHERE NOMBRE DE LA COLUMNA = Numero o texto SOLO TE MUESTRA LA COLUMNA QUE BUSCAS SIN LOS DEMAS DATOS


TRUNCATE TABLE NOMBRE DE LA TABLA    BORRA TODAS LAS FILAS DENTRO DE LA TABLA 
DELETE FROM NOMBRE DE LA TABLA WHERE NOMBRE DE LA TABLA = 'TEXTO O NUMER' OJO QUE SI PONES ESO TE BORRRA TODOS LOS Q SEAN SIMILARES , ES MEJOR MUY ESPECIFICO O USAR EL ID

ALTER TABLE NOMBRE DE LA TABLA ADD 'TIPO DE DATO'(RANGO);  AÑADES UN CAMPO A LA TABLA

ALTER TABLE NOMBRE DE LA TABLA DROP COLUMN NOMBRE DE LA COLUMNA: BORRAS LA COLUMNA
